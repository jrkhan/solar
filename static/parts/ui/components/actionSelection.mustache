<style>
    .actions
    {
        position: absolute;
        bottom: 10px;
        left: 0px;
        background-color: rgba(255, 255, 255, 0);
        min-height: 50px;
        cursor: default;
    }

    .action-item
    {
        display: inline-block;
        width: 75px;
        height: 50px;
        border-radius: 5px;
        color: white;
        cursor: pointer;
    }

</style>

<div class="actions">
{{#actions}}
<span id={{id}} class="action-item" style="background-color: {{color}}">{{name}}</span>
{{/actions}}
</div>